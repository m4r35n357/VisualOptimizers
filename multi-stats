#!/bin/sh
#
# Runs the stats script against all optimizers for a given model

GRY='\e[1;30m'
MGT='\e[0;35m'
NRM='\e[0m'

args="$0 $*"
n_args=$(($# + 1))
printf "${GRY}args ${NRM}%s${GRY} [ ${MGT}%s${GRY} ]${NRM}\n" $n_args "$args" >&2

runs=$1
threshold=$2
model=$3
order=$4
agents=$5
iterations=$6
lower=$7
upper=$8

if [ $order -ge 8 ]
then
    adaptive=1
else
    adaptive=0
fi

# Nelder-Mead
./stats $runs $threshold ./nm-$model-std 3 0 $order 1.0e-6 $(((agents - 1) * iterations + agents)) \
    $(printf "scale=3; 0.5 * ($upper - $lower);\n" | /usr/bin/bc) $adaptive 2 $lower $upper >/dev/null

# Un-clamped
./stats $runs $threshold ./cut-$model-std 3 0 $order $agents $iterations 0 $lower $upper >/dev/null
